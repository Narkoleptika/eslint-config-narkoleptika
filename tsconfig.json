{
    "compilerOptions": {
        "skipLibCheck": true,
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "target": "ESNext",
        "isolatedModules": true,
        "esModuleInterop": true,
        "outDir": "dist",
        "lib": ["esnext"],
        "types": ["node"],
        "declaration": true,
        "declarationMap": true
    },
    "exclude": ["node_modules"],
    "include": ["index.ts"]
}
